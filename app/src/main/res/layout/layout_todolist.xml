<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Todolist" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lista"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/text" android:layout_weight="1"/>
        <Button
                android:text="agregar"
                android:layout_width="25dp"
                android:layout_height="wrap_content" android:id="@+id/boton" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>